{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "types": ["@types/node", "@violentmonkey/types"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "build/js"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
}
